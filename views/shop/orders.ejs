<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(orders.length >0) { %>
            <% for (let order of orders){ %>
                <span class="badge badge-primary"><%= order.id %> </span>
                <span class="badge badge-dark"><%= order.createdAt.toISOString().slice(0, 19).replace('T', ' ') %> </span>
                <ul class="list-group"> 
                    <% for(let product of order.products) {%>
                        <li class="list-group-item"><%= product.title %> <span class="badge badge-secondary"><%=  product.orderItems.quantity %> </span></li>
                        
                         <% } %>  
                   
                </ul>    
            <% } %> 
        <%}else{%>
            <h1>no oders found</h1>
            <% } %>  
    </main>