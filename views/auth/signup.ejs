<%- include('../includes/head.ejs') %> 

<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/messages.css">
<link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(errorMessage){ %>
            <div class="user-message" role="alert"><%= errorMessage  %></div>
    
        <% } %>  
        <form class="product-form" action="/signup" method="POST">
            <input type="hidden" name="_csrf"  value="<%= csrfToken %>" >
            <div class="form-control">
                <label for="email">email</label>

                <input class="<%= validationErrors.find(e => e.param ==='email')?'invalid':'' %>" type="text" name="email" id="email" value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">password</label>
                <input class="<%= validationErrors.find(e => e.param ==='password')?'invalid':'' %>" type="password" name="password" id="password" value="<%= oldInput.password %>">
            </div>  
            <div class="form-control">
                <label for="confirmedPassword">confirmed Password</label>
                <input type="password" name="confirmedPassword" id="confirmedPassword" value="<%= oldInput.confirmedPassword %>">
            </div>
             <button class="btn" type="submit">signUp </button>
        </form>
    </main>